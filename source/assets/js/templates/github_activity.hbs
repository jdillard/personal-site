{{#if @root.length}}
<div class="entry">
  {{#each @root}}
    <div class="mv4 shadow-5 mh2-ns mh0 pa3 ba bg-white b--light-gray br3">
      <h4 class="mt1 mb1">
        <time class="f6 db mr3">{{this.date}}</time>
      </h4>
      {{#each this.data}}
      <a class="flex-ns items-center no-underline f6 black-70 hover-light-red" href="{{this.link}}">
        <span class="pv0-ns ml3 pv1 lh-copy rslide db">
          <!--<span class="near-white bg-animate bg-mid-gray inline-flex items-center mh1 f7 tc br2 ph1">Github</span>-->
          {{{this.action}}} <strong>{{this.repo.name}}</strong>
        </span>
      </a>
      {{/each}}
    </div>
  {{/each}}
</div>
{{else}}
<div class="entry"></div>
  <div class="ma2 pa3 f4-ns f5 ba b--light-gray">
    <span class="pv0-ns pv1 b lh-copy">No recent activity.</span>
  </div>
</div>
{{/if}}
