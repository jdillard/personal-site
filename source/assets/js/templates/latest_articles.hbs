<div class="entry tw-mt-8">
    {{#each this}}
    <div class="tw-mb-4 tw-shadow-[4px_4px_8px_0_rgba(0,0,0,0.2)] ns:tw-mx-2 tw-mx-0 tw-p-4 tw-border tw-border-l-4 tw-border-solid tw-bg-white tw-border-light-gray hover:tw-border-l-light-red tw-rounded-lg">
      <a class="ns:tw-text-xl tw-text-lg tw-font-bold ns:tw-flex tw-items-center tw-no-underline tw-text-black/70 hover:tw-text-light-red" href="{{this.url}}">
        <span class="ns:tw-py-0 tw-py-1 tw-leading-normal tw-block">{{this.title}}</span>
      </a>
      <footer class="tw-text-gray tw-text-sm ns:tw-font-thin tw-font-normal">
           {{#each this.categories}}
           <a class="tw-text-sm tw-no-underline fancy-link tw-relative tw-text-gray hover:tw-text-light-red" href="/blog/archive.html#{{this}}">{{this}}</a>{{#unless @last}} / {{/unless}}
           {{/each}}
       </footer>
    </div>
    {{/each}}
</div>
<div class="tw-py-5 tw-px-3 tw-text-center tw-border tw-border-light-gray tw-text-black/70 tw-bg-near-white tw-shadow-[4px_4px_8px_0_rgba(0,0,0,0.2)] tw-mt-6 tw-mb-3">
  <a href="/blog" class="tw-font-bold tw-text-mid-gray">Read More Articles</a>
</div>
